<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".ui.ui.attendance.AttendanceFragment">

    <LinearLayout
        android:background="@color/holo_gray_bright"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="6dp"
                android:background="@color/colorPrimaryLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vijay Pandit"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/gradient_primary_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <ImageView
                   android:tint="@color/colorPrimary"
                   android:layout_margin="12dp"
                   android:layout_width="42dp"
                   android:layout_height="42dp"
                   android:src="@drawable/ic_checking_attendance"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_checking_attendance"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark Attendance"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryLightest"
                    android:padding="16dp"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20, April 2021"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/tv_date"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_calendar_1"
                        android:tint="@color/colorPrimaryDark"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_mark_in"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark In"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:textColor="@color/color_black"/>

                    <ImageView
                        android:id="@+id/iv_mark_in"
                        android:tint="@color/holo_green_dark"
                        android:layout_marginLeft="30dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mark_out"
                    android:gravity="center_vertical"
                    android:layout_margin="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark Out"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:textColor="@color/color_black"/>

                    <ImageView
                        android:id="@+id/iv_mark_out"
                        android:tint="@color/holo_green_dark"
                        android:layout_marginLeft="30dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="16dp"
                    android:text="    Mark Attendance    "
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:background="@drawable/buttonbackshape"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_margin="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today In/Out attendance has been marked."
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="@color/color_green"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>